<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    tools:context="com.tykle.activity.PersonalInformation">

    <include layout="@layout/appbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/age"
                    android:text="Age between :"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="30-40 Year"

                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender :"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/male"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Male"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/gender"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:drawablePadding="25dp"-->
                <!--android:drawableStart="@drawable/male"-->
                <!--android:padding="15dp"-->
                <!--android:text="Male"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="25sp" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking For :"
                    android:drawablePadding="25dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                android:id="@+id/looking_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Female"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language:"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/language"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="15dp"
                    android:text="English"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="profession :"
                    android:drawablePadding="25dp"
                    android:drawableStart="@drawable/job"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/profession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="15dp"
                    android:text="Job"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>





        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
