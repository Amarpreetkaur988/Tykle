<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorDarkPink</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPink</item>
        <item name="colorPrimaryDark">@color/colorDarkPink</item>
        <item name="colorAccent"></item>
    </style>

    //For radio button

    <style name="Myradio" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="colorControlNormal">#FA219B</item>
        <item name="colorControlActivated">#f9f7f8</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
<style name="menu_text_color" >
    <item name="android:textColor">@color/colorbase</item>
</style>

    <style name="myCustomPopUpTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
    </style>
    <style name="ListHeaderStyle" parent="ListItem">
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
        <item name="robotoTypeface">roboto_medium</item>
    </style>

    <style name="EditTextNotEditableTheme">
        <item name="colorControlNormal">@color/warm_white</item>
        <item name="colorControlActivated">@color/warm_white</item>
        <item name="colorControlHighlight">@color/warm_white</item>

    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/warm_white</item>
        <item name="colorControlActivated">@color/color_accent</item>
        <item name="colorControlHighlight">@color/warm_white</item>

    </style>

    <style name="ChatActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/background_chat_color</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/color_blue_qb</item>
    </style>



